@model BookClubMVC.Models.Book

@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

<h3>Who is this book " @Html.DisplayFor(model => model.Title) " being checked out for</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Genre)
        @Html.HiddenFor(model => model.Author)
        @Html.HiddenFor(model => model.PublicationYear)

        <div class="form-group">
            @Html.LabelFor(model => model.CheckedOutID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CheckedOutID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CheckedOutID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Checkout" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




